<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.edu.wat.fitapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.welcome.WelcomeActivity"
            android:label="Welcome"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarWithColor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.register.RegisterActivity"
            android:label="Rejestracja"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.main.MainActivity"
            android:label="FitApplication"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.main.fragment.addToSystem.AddToFoodSystemActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarWithColor" />
        <activity
            android:name=".view.main.fragment.profile.AddMyMealNameActivity"
            android:label="Dodawanie posiłku - etap 1/2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.main.fragment.profile.AddMyMealIngredientsActivity"
            android:label="Dodawanie posiłku - etap 2/2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.main.fragment.profile.AddMyTrainingNameActivity"
            android:label="Dodawanie treningu - etap 1/2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.main.fragment.profile.AddMyTrainingExercisesActivity"
            android:label="Dodawanie treningu - etap 2/2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.main.fragment.addToSystem.AddToTrainingSystemActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBarWithColor"></activity>
    </application>

</manifest>